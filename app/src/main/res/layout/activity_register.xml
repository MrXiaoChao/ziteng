<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/blue">

        <ImageView
            android:padding="9dp"
            android:layout_marginLeft="12dp"
            android:id="@+id/phone_fanhui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@mipmap/fanhui"
            />

        <TextView
            android:id="@+id/warn_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/hqyzm"
            android:textColor="@color/white"
            android:textSize="@dimen/text_big" />

    </RelativeLayout>
    <View
        android:background="@color/gray_dan"
        android:layout_width="match_parent"
        android:layout_height="20dp"/>
    <View
        android:background="@color/gray_bian"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <EditText
            android:paddingLeft="13dp"
            android:inputType="textEmailAddress"
            android:maxLength="30"
            android:singleLine="true"
            android:id="@+id/et_email_1"
            android:background="@null"
            android:textSize="14dp"
            android:hint="@string/qsryxh"
            android:layout_width="260dp"
            android:layout_height="match_parent" />
        <Button
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:background="@drawable/btn_yanzm_shape"
            android:id="@+id/btn_huoqu"
            android:textSize="13dp"
            android:layout_marginRight="12dp"
            android:text="@string/hqyzm"
            android:layout_alignParentRight="true"
            android:textColor="@color/white"
            android:layout_width="100dp"
            android:layout_height="28dp" />
    </RelativeLayout>
    <View
        android:background="@color/gray_bian"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <View
        android:background="@color/gray_dan"
        android:layout_width="match_parent"
        android:layout_height="8dp"/>
    <View
        android:background="@color/gray_bian"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <EditText
        android:paddingLeft="14dp"
        android:numeric="integer"
        android:id="@+id/et_yanzm"
        android:maxLength="15"
        android:singleLine="true"
        android:background="@null"
        android:textSize="14dp"
        android:hint="@string/qsryzm"
        android:layout_width="match_parent"
        android:layout_height="40dp" />
    <View
        android:background="@color/gray_bian"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <RelativeLayout
        android:background="@color/gray_dan"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:layout_centerHorizontal="true"
            android:id="@+id/queren"
            android:paddingLeft="80dp"
            android:paddingRight="80dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/btn_yanzm_shape"
            android:textSize="20dp"
            android:text="@string/xyb"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>




</LinearLayout>