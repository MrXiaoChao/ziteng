<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/titlebar" />

    <View
        android:background="@color/gray_dan"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <View
        android:background="@color/gray_bian"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

        <LinearLayout
            android:paddingRight="8dp"
            android:orientation="horizontal"
            android:id="@+id/layout_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:weightSum="4">

            <Button
                android:gravity="center"
                android:id="@+id/btnTab001"
                style="@style/nav_btn_style"
                android:text="@string/focus" />

            <Button
                android:gravity="center"
                android:id="@+id/btnTab002"
                style="@style/nav_btn_style"
                android:text="@string/politics" />

            <Button
                android:gravity="center"
                android:id="@+id/btnTab003"
                style="@style/nav_btn_style"
                android:text="@string/industry" />
            <Button
                android:gravity="center"
                android:id="@+id/btnTab004"
                style="@style/nav_btn_style"
                android:text="@string/sitesnews" />
        </LinearLayout>
    <View
        android:layout_marginTop="5dp"
        android:background="@color/gray_bian"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <View

        android:background="@color/gray_dan"
        android:layout_width="match_parent"
        android:layout_height="5dp"/>
        <FrameLayout
            android:layout_weight="1"
            android:id="@+id/fl_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </FrameLayout>

    <View
        android:background="@color/gray_dan"
        android:layout_width="match_parent"
        android:layout_height="5dp"/>

    </LinearLayout>

