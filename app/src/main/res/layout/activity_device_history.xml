<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/blue">

        <ImageView
            android:padding="9dp"
            android:layout_marginLeft="12dp"
            android:id="@+id/site_fanhui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@mipmap/fanhui"
            />

        <TextView
            android:id="@+id/tv_site_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/dhd"
            android:textColor="@color/white"
            android:textSize="@dimen/text_big" />
    </RelativeLayout>
    <View
        android:background="@color/gray_dan"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <LinearLayout
        android:paddingRight="3dp"
        android:orientation="horizontal"
        android:id="@+id/layout_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:weightSum="4">

        <Button
            android:gravity="center"
            android:id="@+id/btnTab001"
            style="@style/nav_btn_style"
            android:text="@string/al" />

        <Button
            android:layout_marginRight="3dp"
            android:gravity="center"
            android:id="@+id/btnTab002"
            style="@style/nav_btn_style"
            android:text="@string/sl" />

        <Button
            android:layout_marginLeft="3dp"
            android:gravity="center"
            android:id="@+id/btnTab003"
            style="@style/nav_btn_style"
            android:text="@string/pl" />
        <Button
            android:gravity="center"
            android:id="@+id/btnTab004"
            style="@style/nav_btn_style"
            android:text="@string/pc" />
    </LinearLayout>
    <View
        android:layout_marginTop="5dp"
        android:background="@color/gray_dan"
        android:layout_width="match_parent"
        android:layout_height="5dp"/>
    <FrameLayout
        android:layout_weight="1"
        android:id="@+id/fl_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </FrameLayout>


</LinearLayout>