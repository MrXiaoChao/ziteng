<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/blue"
        />
    <LinearLayout
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="43dp">
        <Button
            android:layout_marginTop="2dp"
            android:id="@+id/btn_site"
            android:drawableTop="@drawable/btn_main_site"
            android:textColor="@drawable/btn_main_color"
            android:text="@string/site"
            style="@style/btn_main" />

        <Button
            android:layout_marginTop="2dp"
            android:id="@+id/btn_monitor"
            android:drawableTop="@drawable/btn_main_monitor"
            android:textColor="@drawable/btn_main_color"
            android:text="@string/monitor"
            style="@style/btn_main" />
        <Button
            android:layout_marginTop="2dp"
            android:id="@+id/btn_news"
            android:drawableTop="@drawable/btn_main_news"
            android:textColor="@drawable/btn_main_color"
            android:text="@string/news"
            style="@style/btn_main" />
        <Button
            android:visibility="gone"
            android:layout_marginTop="2dp"
            android:id="@+id/btn_info"
            android:drawableTop="@drawable/btn_main_info"
            android:textColor="@drawable/btn_main_color"
            android:text="@string/ss"
            style="@style/btn_main" />
        <Button
            android:layout_marginTop="2dp"
            android:id="@+id/btn_mine"
            android:drawableTop="@drawable/btn_main_mine"
            android:textColor="@drawable/btn_main_color"
            android:text="@string/mine"
            style="@style/btn_main" />
    </LinearLayout>

</LinearLayout>
